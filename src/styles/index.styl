@require 'reset.styl'
@require 'colors.styl'
@require 'variables.styl'
@require 'fonts.styl'

body
  background-color $background-color

body.desktop.no-touch.body--light
  font-family 'PT Sans', sans-serif

.container
  width 100%
  margin-right auto
  margin-left auto

  @media (min-width 576px)
    max-width 100%
    padding: 0px 25px

  @media (min-width 1024px)
    max-width 960px

  @media (min-width 1216px)
    max-width 1152px

  @media (min-width 1408px)
    max-width 1344px

.uploader .q-field__native.row.items-center.cursor-pointer
  display none

.uploader .q-field__control-container.col.relative-position.row.no-wrap.q-anchor--skip
  display block
  font-size 24px
  margin-top 10px
  text-align center 

body.desktop .q-hoverable:hover > .q-focus-helper
  background none !important
  opacity 0 !important

.q-btn:before
  box-shadow none !important

.q-pa-md.row.items-start.q-gutter-md.card-wrapper
  @media screen and (min-width 600px) 
    width 80%
    margin 0 auto

.date-block
  position absolute
  top -20px
  left 20px
  padding 25px 25px
  font-size 20px
  text-align center
  color white
  background-color #433b3b
  @media screen and (max-width 600px)
    padding 15px 20px
    font-size 16px

.avatar
  width 40px
  border-radius 50%
    
.card
  background-color #f2fbfb !important
  &__footer
    display flex
    align-items center
    border-top 2px dashed #0000003b
    justify-content space-between
    padding-top 5px
    @media screen and (max-width: 600px)
      padding 0 3px 10px 3px
    &__author
      max-width 35vw
      min-width 150px
      &__avatar
        width 40px
        height 40px
      &__name
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
  &__image
    width initial !important
    margin 0 auto !important
    max-width 100% !important
  &__description
    font-size 18px
    color #444b4d
    word-break break-all
  &__title
    font-size 24px
    letter-spacing 2px
    color #1C1D1F
    word-break break-all

.form-wrapper
  .form
    width "max(30vw, 290px)" % null
    &__input
      font-size $font-size-extra-large
    &__button
      width 100%
      margin 10px 0
      padding 12px 0px
      font-size $font-size-large
    &__footer
      text-align center
