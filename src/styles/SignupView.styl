.form-wrapper
  display flex
  flex-direction column
  align-items center
  h3
    margin: 10px 0px
  .form
    min-width: 30vw
    .input-wrapper
      width 100%
    .input
      font-size 24px
      flex-basis 50%
      margin 10px 0px
    .textarea
      justify-content: center;
    .select
      width: 47%;  
    .button
      width 100%
      margin 10px 0px
      padding 10px 30px
      font-size 20px
    .error-message
      font-size 12px
      color red